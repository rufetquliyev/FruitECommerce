@using ECommerce.Business.ViewModels.FruitVMs
@model CreateFruitVm
<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" style="color:red"></div>
    <div class="form-group">
        <label asp-for="FruitName">Fruit Name</label>
        <input asp-for="FruitName" class="form-control" placeholder="Fruit Name">
    </div>
    <div class="form-group">
        <label asp-for="CategoryName">Category Name</label>
        <input asp-for="CategoryName" class="form-control" placeholder="Category Name">
    </div>
    <div class="form-group">
        <label asp-for="Image">Image</label>
        <input asp-for="Image" class="form-control" placeholder="Image File">
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
